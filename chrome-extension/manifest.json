{
  "manifest_version": 3,
  "name": "EverythingEverywhere",
  "version": "1.2.0",
  "description": "Search selected text in Everything app with right-click",
  "permissions": [
    "contextMenus",
    "nativeMessaging",
    "storage",
    "clipboardWrite",
    "notifications",
    "scripting",
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  }
}